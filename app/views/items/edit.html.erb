
<div>
    <h1>Editing Item</h1>
    <br/>

    <%= form_for @item, html: { class: "form-horizontal", multipart: true } do |f| %>
        <fieldset>
            <div class="form-group row">
                <label class="col-sm-2 control-label">
                    Item Name:
                </label>
                <div class="col-sm-10">
                    <%= f.text_field :name, placeholder: 'Enter Item Name', class: 'form-control' %>
                </div>
            </div>
        </fieldset>

        <fieldset>
            <div class="form-group row">
                <label class="col-sm-2 control-label">
                    Item Description:
                </label>
                <div class="col-sm-10">
                    <%= f.text_area :description, placeholder: 'Enter Item Description', class: 'form-control' %>
                </div>
            </div>
        </fieldset>

        <fieldset>
            <div class="form-group row">
                <label class="col-sm-2 control-label">
                    Item Price:
                </label>
                <div class="col-sm-10">
                    <%= f.text_field :price, placeholder: 'Enter Item Price', class: 'form-control' %>
                </div>
            </div>
        </fieldset>

        <fieldset>
            <div class="form-group row">
                <label class="col-sm-2 control-label">
                    Item Calories:
                </label>
                <div class="col-sm-10">
                    <%= f.text_field :calories, placeholder: 'Enter Item Calories', class: 'form-control' %>
                </div>
            </div>
        </fieldset>

        <fieldset>
            <div class="form-group row">
                <label class="col-sm-2 control-label">
                    Item Photo URL:
                </label>
                <div class="col-sm-10">
                    <%= f.text_field :photo_url, placeholder: 'Enter Item Photo URL', class: 'form-control' %>
                </div>
            </div>
        </fieldset>

        <fieldset>
            <div class="form-group row">
                <label class="col-sm-2 control-label">
                    86 Item:
                </label>
                <div class="col-sm-10">
                    <%= f.check_box :eightysix, class: 'form-check-input' %>
                </div>
            </div>
        </fieldset>

        <%= f.submit 'Save Changes', class: "btn btn-primary" %>
        <a href="<%= items_path %>" >Back to Menu Items</a>

    <% end %>
</div>