

<div>
    <h1>Delete Item</h1>
    <h3>Are you sure you wish to Delete Item?</h3>
    <br/>
    <table class="table">
        <tbody>
            <tr>
                <td>Item ID</td>
                <td><%= @item.id %></td>
            </tr>
            <tr>
                <td>Item Name</td>
                <td><%= @item.name %></td>
            </tr>
            <tr>
                <td>Item Description</td>
                <td><%= @item.description %></td>
            </tr>
            <tr>
                <td>Item Price</td>
                <td><%= @item.price %></td>
            </tr>
            <tr>
                <td>Item Calories</td>
                <td><%= @item.calories %></td>
            </tr>
            <tr>
                <td>Item 86</td>
                <td><%= @item.eightysix %></td>
            </tr>
        </tbody>
    </table>

    <%= form_for @item, html: { class: "form-horizontal", multipart: true } do |f| %>
        <fieldset>
            <div class="form-group row">
                <label class="col-sm-2 control-label">
                    Delete Item:
                </label>
                <div class="col-sm-10">
                    <%= f.check_box :archived, class: 'form-check-input' %>
                </div>
            </div>
        </fieldset>

        <%= f.submit 'Delete Item', class: "btn btn-primary" %>
        <a href="<%= items_path %>" >Back to Menu Items</a>

    <% end %>
</div>